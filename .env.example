# BabySteps Digital School - Environment Variables
# Copy this to .env and update values for your environment

DJANGO_SECRET_KEY=change-me-to-a-real-secret-key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# LLM Provider: ollama, openai, anthropic, google
LLM_PROVIDER=ollama
LLM_MODEL_NAME=llama3.2
LLM_BASE_URL=http://127.0.0.1:11434

# Uncomment for OpenAI
# LLM_PROVIDER=openai
# LLM_MODEL_NAME=gpt-3.5-turbo
# OPENAI_API_KEY=your-key-here

# Uncomment for Anthropic
# LLM_PROVIDER=anthropic
# LLM_MODEL_NAME=claude-3-sonnet-20240229
# ANTHROPIC_API_KEY=your-key-here
